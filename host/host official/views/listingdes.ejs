<!DOCTYPE html>
<html>

  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>
      Abang - Provider - View Listing
    </title>
    <% include snips/reg-header %>
  </head>

  <body>
    <% include snips/log-nav %>
    <div class="container">
      <div class="row profile">
        <!-- SIDE PROFILE -->
        <div class="col-md-8">
          <div class="profile-content">
            <!-- SIDEBAR USERPIC -->
            <div >
              <img src="<%= house[0].coverimg %>" class="mx-auto img-fluid img-round d-block" alt="display-photo">
            </div>
            <!-- END SIDEBAR USERPIC -->
            <!-- SIDEBAR USER TITLE -->
            <div class="gallery-block"><div class="heading"><h2 class="text-center"><%= house[0].name %></h2></div></div>

              <table class="table table-striped">
                <tr>
                  <td style="width:25%" class="font-weight-bold ">Description</td>
                  <td><%= house[0].description %></td>
                </tr>
                <tr>
                  <td class="font-weight-bold">Address</td>
                  <td><%= house[0].address %></td>
                  
                </tr>
                <tr>
                  <td class="font-weight-bold">Rules</td>
                  <td><%= house[0].rules %></td>
                </tr>
                <tr>
                  <td class="font-weight-bold">Amenities</td>
                  <td><%= house[0].amenities %></td>
                </tr>
                <tr>
                  <td class="font-weight-bold">Cancellations</td>
                  <td><%= house[0].cancellations %></td>
                </tr>
                <tr>
                  <td class="font-weight-bold">Price</td>
                  <td>PHP <%= house[0].price %></td>
                  <td></td>
                </tr>
                <tbody>
                    
                </tbody>
              </table>           
              <a href="/editlist" class="btn btn-dark btn-block">Edit this listing</a>
            <!-- END SIDEBAR USER TITLE -->
            <!-- SIDEBAR BUTTONS
-->
          </div>
        </div>
        <!-- END SIDE PROFILE -->
        <div class="col-md-4">
          <div class="profile-content">
            <div class="bd-example bd-example-tabs">
              <p class="profile-usertitle-name">Room Status</p>
              <table class="table table-striped">
                <thead>
                  <th>Room Number</th>
                  <th>Status</th>
                </thead>
                <tbody>
                  <% room.forEach (function(list, ind){ %>
                    <tr>
                        <td><%= list.id %></td>
                        <td><%= list.status %></td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>

          </div>
        </div>
      </div>
    </div>

  </body>

</html>