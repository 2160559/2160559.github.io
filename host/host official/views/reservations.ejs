<!DOCTYPE html>
<html>

  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <title>
      Abang - Provider
    </title>
    <% include snips/reg-header %>
  </head>

  <body>
    <div class="wrapper align-middle">
      <% include snips/log-nav %>
      <div class="row justify-content-center margin-top">
        <div class="container justify-content-center m-5 pb-5">
          <div class="card">
            <div class="card-header">
              <h1><%= title %> (<%= data.length %>)</h1>
            </div>

            <div class="card-body">
              <% if( data.length > 0) { %>
              <table class="table table-striped">
                <thead>
                  <th scope="col">Transient Name</th>
                  <th scope="col">Address</th>
                  <th scope="col">Number of CR</th>
                  <th scope="col">Number of Rooms</th>
                  <th scope="col">Cover Image</th>
                  <th scope="col"></th>
                </thead>
                <% data.forEach(function(list) { %>
                <tr>
                  <td><%= list.name %></td>
                  <td><%= list.address %></td>
                  <td><%= list.no_CR %></td>
                  <td><%= list.no_room %></td>
                  <td><img src="<%= list.coverimg %>" width="200px;"></td>
                  <td><a href="/listings<%= uid %><%= list.id %>">See info</a></td>
                </tr>
                <% }); %>
              </table>
            </div>
            <div class="card-body">
              <p><a href="/addlist">Add more!</a></p>
            </div>
            <% } else { %>
            <p>Hm, you don't have any listings. Want to <a href="/addlist">add some</a>?</p>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </body>

</html>